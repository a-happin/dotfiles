git-repositories ()
{
  if type fd > /dev/null 2>&1
  then
    fd --hidden --no-ignore --type d --exclude .cache --glob .git --format {//}
  else
    find . -type d -name .git -exec dirname {} \;
  fi
}

# ~以下のすべてのリポジトリに対してgit statusを実行
# .cacheは除外
git-status-all ()
{
  local i
  # find . -name .cache -prune -o -name .git -type d -exec dirname {} \; | while read i
  git-repositories | while read i
  do
    printf "%s\n" "$i"
    \git -C "$i" status -s
  done
}

color-palette ()
{
  local c
  for c in {0..255}
  do
    printf "\e[38;5;%sm %03d" $c $c
    [[ $(($c%16)) -eq 15 ]] && printf "\n"
  done
}

powerlinefont-test ()
{
  local c
  for c in {$((0xe0a0))..$((0xe0bf))}
  do
    # printf "%s\n" $c
    printf "U+%04X %b" "$c" "$(printf '\\u%04x' $c)"
    [[ $(($c%4)) -eq 3 ]] && printf "\n" || printf "\t"
  done
}

ripgrep-replace ()
{
  if [[ $# -lt 2 ]]
  then
    cat << EOS
Usage: ripgrep-replace [rg options...] <old> <new>
EOS
    return 1
  fi

  local new="${@[-1]}"
  local old="${@[-2]}"
  local rg_opts=("${@:1:-2}")
  # printf "Debug: new=%s\n" "$new"
  # printf "Debug: old=%s\n" "$old"
  # printf "Debug: args=%s\n" "$@"
  # printf "Debug: \$#=%s\n" "$#"
  # printf "Debug: \$#-1=%s\n" "$(($#-1))"
  # printf "Debug: ???=%s\n" "${@:1:1}"
  # printf "Debug: rg_opts=%s\n" "${rg_opts[@]}"
  # return 0

  # おそらく安全な区切り文字
  local sep=$'\x1f'

  # printf "debug: %s\n" "s${sep}${old}${sep}${new}${sep}g"
  rg --hidden --no-ignore --glob '!.git' "${rg_opts[@]}" -l -0 "$old" | xargs -0 sed -i "s${sep}${old}${sep}${new}${sep}g"
}

#------------------------------
# nvim-remote
#------------------------------
# nvim in nvim terminalにならないようにする
# $EDITORを変えるとコミットメッセージの編集時とかにも親のnvimを使ってしまう(それは違う)ので、$EDITORを変えずにnvimを変える
[[ -n $NVIM ]] && nvim ()
{
  if [[ -z $* ]]
  then
    command nvim --headless --server $NVIM --remote-send "<Cmd>hide<CR>"
  else
    # command nvim --server $NVIM --remote "$@"
    command nvim --headless --server $NVIM --remote-tab "$@"
  fi
}
