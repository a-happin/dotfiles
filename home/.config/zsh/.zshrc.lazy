my-runc ()
{
  my-cc -o /tmp/a.out "$@" && /tmp/a.out
}


runchino ()
{
  chino -o /tmp/a.out "$@" && printf "\033[1;32mcompile succeded.\033[0m\n" >&2 && /tmp/a.out
}

atcoder-run ()
{
  [[ "$1" -nt "./a.out" ]] && atcoder-cc -o ./a.out "$1"
  shift
  ./a.out "$@"
}

ojt ()
{
  [[ $# -eq 0 ]] && {
    set -- *.cpp
    if [[ $# -gt 1 ]] && {
      set -- "$(printf "%s\n" "$@" | fzf --preview 'bat --color=always --style=numbers --line-range :500 {}')"
    }
    if [[ $# -eq 0 ]] && {
      printf "no source file\n" >&2
      return 1
    }
  }
  atcoder-cli bash -c 'g++ -std=c++2b -Wall -Wextra -pedantic-errors -O2 -pipe -DLOCAL -DDEBUG -o ./a.out '"$@"' && oj t'
}

