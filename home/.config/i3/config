bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# control volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -3%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +3%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# control screen brightness
#bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# screenshot
# 画面全体
bindsym --release Print exec --no-startup-id scrot --silent --exec 'mkdir -p ~/screenshot && mv $f ~/screenshot && notify-send screenshot $f'
# フォーカス中の画面
# Print is Sys_Req when Alt is pressed,
#       is Print   when Win is pressed
bindsym $mod+Print exec --no-startup-id scrot --silent --focused --exec 'mkdir -p ~/screenshot && mv $f ~/screenshot && notify-send "screenshot(focused)" $f'
bindsym Mod1+Sys_Req exec --no-startup-id scrot --silent --focused --exec 'mkdir -p ~/screenshot && mv $f ~/screenshot && notify-send "screenshot(focused)" $f'
# 範囲選択
bindsym --release Shift+Print exec --no-startup-id scrot --silent --select --freeze --exec 'mkdir -p ~/screenshot && mv $f ~/screenshot && notify-send "screenshot(range)" $f'

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -f 'pango:Koruri SemiBold 9' -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Shutdown' 'systemctl poweroff' -b 'Reboot' 'systemctl reboot' -b 'Logout' 'i3-msg exit'"; exec --no-startup-id "sleep 7; killall i3-nagbar"

# resize
bindsym $mod+minus resize shrink height
bindsym $mod+equal resize grow height
bindsym $mod+shift+less resize shrink width
bindsym $mod+shift+greater resize grow width

set $layout_mode "Layout [h: horizontal], [v: vertical], [f: fullscreen], [F: floating], [s: stacking], [t: tabbed]"
mode $layout_mode {
  # vimと逆

  # split in horizontal orientation
  bindsym h layout splitv

  # split in vertical orientation
  bindsym v layout splith

  # toggle fullscreen
  bindsym f fullscreen toggle

  # toggle floating
  bindsym Shift+f floating toggle

  # stacking
  bindsym s layout stacking

  # tabbed
  bindsym t layout tabbed

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+e mode $layout_mode

#define resize and move size unit
set $size 10

# resize window (you can also use the mouse for that)
set $resize_mode "Resize [hjkl: grow], [HJKL: shrink] [1: HD] [2: FullHD] [3: WQHD]"
mode $resize_mode {
  # These bindings trigger as soon as you enter the resize mode

  # grow
  bindsym h resize grow left $size px or $size ppt
  bindsym j resize grow down $size px or $size ppt
  bindsym k resize grow up $size px or $size ppt
  bindsym l resize grow right $size px or $size ppt

  # same bindings, but for the arrow keys
  bindsym Left resize grow left $size px or $size ppt
  bindsym Down resize grow down $size px or $size ppt
  bindsym Up resize grow up $size px or $size ppt
  bindsym Right resize grow right $size px or $size ppt

  # shrink
  bindsym Shift+h resize shrink left $size px or $size ppt
  bindsym Shift+j resize shrink down $size px or $size ppt
  bindsym Shift+k resize shrink up $size px or $size ppt
  bindsym Shift+l resize shrink right $size px or $size ppt

  # same bindings, but for the arrow keys
  bindsym Shift+Left resize shrink left $size px or $size ppt
  bindsym Shift+Down resize shrink down $size px or $size ppt
  bindsym Shift+Up resize shrink up $size px or $size ppt
  bindsym Shift+Right resize shrink right $size px or $size ppt

  # set fixed size
  bindsym 1 resize set 1280 px 720 px
  bindsym 2 resize set 1920 px 1080 px
  bindsym 3 resize set 2560 px 1440 px

  # change mode
  bindsym m mode $move_mode
  bindsym $mod+m mode $move_mode

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode $resize_mode

# move floating window
set $move_mode "Move Floating Window [hjkl: move], [0: move to top left], [c: center], [m/mouse: move to mouse]"
mode $move_mode {
  # move
  bindsym h move left $size px
  bindsym j move down $size px
  bindsym k move up $size px
  bindsym l move right $size px

  bindsym Left move left $size px
  bindsym Down move down $size px
  bindsym Up move up $size px
  bindsym Right move right $size px

  # move to top left
  bindsym 0 move position 0 px 0 px

  # move to center
  bindsym c move position center

  # move to mouse
  bindsym m move position mouse
  bindsym --whole-window button1 move position mouse

  # change mode
  bindsym r mode $resize_mode
  bindsym $mod+r mode $resize_mode

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+m mode $move_mode

# wallpaper manager
set $wallpaper_mode "Wallpaper [r: random]"
mode $wallpaper_mode {
  # random
  bindsym r exec --no-startup-id feh --no-fehbg --randomize --bg-max --recursive ~/Dropbox/image/illust

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+w mode $wallpaper_mode

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  position top
  font pango:Koruri Bold 9
  status_command i3status -c ${HOME}/.config/i3/i3statusconfig

  colors {
      background #000000
      statusline #ffffff
      separator #666666

      focused_workspace  #88b8f6 #88b8f6 #000000
      # active_workspaceはマルチモニター環境じゃないと見えない
      active_workspace   #000000 #5f676a #ffffff
      inactive_workspace #000000 #000000 #888888
      urgent_workspace   #f58c80 #f58c80 #000000
  }
}

# exec
# - exec: exec once
# - exec_always: exec when restart i3
# キーリピート開始まで200[ms]、キーリピート間隔1/45[sec]
exec_always --no-startup-id xset r rate 200 45
exec --no-startup-id fcitx5 -d
exec --no-startup-id dropbox
exec --no-startup-id feh --no-fehbg --randomize --bg-max --recursive ~/Dropbox/image/illust/
exec_always --no-startup-id imwheel -k
exec --no-startup-id picom -b
