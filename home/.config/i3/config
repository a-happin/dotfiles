# Start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
bar {
  position top
  font pango:Koruri Bold 8
  status_command i3status -c ${HOME}/.config/i3/i3statusconfig

  colors {
      background #000000
      statusline #ffffff
      separator #666666

      focused_workspace  #88b8f6 #88b8f6 #000000
      # active_workspaceはマルチモニター環境じゃないと見えない
      active_workspace   #000000 #5f676a #ffffff
      inactive_workspace #000000 #000000 #888888
      urgent_workspace   #f58c80 #f58c80 #000000
  }
}

# exec
# - exec: exec once
# - exec_always: exec when restart i3
# キーリピート開始まで200[ms]、キーリピート間隔1/45[sec]
exec_always --no-startup-id xset r rate 200 45
exec --no-startup-id fcitx5 -d
exec --no-startup-id dropbox
exec --no-startup-id feh --no-fehbg --randomize --bg-max --recursive ~/Dropbox/image/illust/
# https://askubuntu.com/questions/421645/imwheel-destroys-back-forth-navigation-buttons-from-my-mouse
exec_always --no-startup-id imwheel -k -b 45
exec --no-startup-id picom -b


