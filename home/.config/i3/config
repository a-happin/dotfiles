bindsym $mod+Shift+c exec --no-startup-id "notify-send i3 'If you want to reload i3config,\nPress mod+i → r'"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
# bindsym $mod+Shift+r restart
bindsym $mod+Shift+r exec --no-startup-id "notify-send i3 'If you want to restart i3,\nPress mod+i → r → r'"


# exit i3 (logs you out of your X session)
set $exit_mode "exit [;: lock], [l: logout], [r: reboot], [s: shutdown]"
mode $exit_mode {
  bindsym --release semicolon mode "default"; exec --no-startup-id killall i3-nagbar; exec --no-startup-id  "scrot - | ffmpeg -loglevel quiet -y -i - -vf 'gblur=sigma=16' -frames:v 1 /tmp/screen.png; { i3lock -i /tmp/screen.png -e; rm -f /tmp/screen.png; }"
  bindsym --release l mode "default"; exec --no-startup-id killall i3-nagbar; exit
  bindsym --release r mode "default"; exec --no-startup-id killall i3-nagbar; exec --no-startup-id systemctl reboot
  bindsym --release s mode "default"; exec --no-startup-id killall i3-nagbar; exec --no-startup-id systemctl poweroff

  # bindsym h mode "default"; exec --no-startup-id killall i3-nagbar; exec --no-startup-id systemctl hibernate
  # bindsym u mode "default"; exec --no-startup-id killall i3-nagbar; exec --no-startup-id systemctl suspend

  bindsym Escape mode "default"; exec --no-startup-id killall i3-nagbar
  bindsym Return mode "default"; exec --no-startup-id killall i3-nagbar
}
bindsym --release $mod+Shift+e exec --no-startup-id "i3-nagbar -f 'pango:Koruri SemiBold 9' -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Shutdown' 'systemctl poweroff' -B 'Reboot' 'systemctl reboot' -B 'Logout' 'i3-msg exit' -B 'Lock' 'i3lock'"; mode $exit_mode


# control i3
set $i3_mode "i3 [c: edit i3config], [r: reload config] → [r: restart i3]"
mode $i3_mode {
  bindsym c mode "default"; exec --no-startup-id i3-sensible-terminal -e $EDITOR $XDG_CONFIG_HOME/i3/config -c "cd %:h"
  # reload the configuration file
  bindsym --release r reload; mode $i3_mode2

  # bindsym $mod+l mode "default"; exit
  # bindsym $mod+r mode "default"; exec --no-startup-id systemctl reboot
  # bindsym $mod+s mode "default"; exec --no-startup-id systemctl poweroff

  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+i mode $i3_mode

set $i3_mode2 "i3 [c: edit i3config], [r: restart i3]"
mode $i3_mode2 {
  bindsym c mode "default"; exec --no-startup-id i3-sensible-terminal -e $EDITOR $XDG_CONFIG_HOME/i3/config -c "cd %:h"
  # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
  bindsym --release r mode "default"; restart

  # bindsym $mod+l mode "default"; exit
  # bindsym $mod+r mode "default"; exec --no-startup-id systemctl reboot
  # bindsym $mod+s mode "default"; exec --no-startup-id systemctl poweroff

  bindsym Escape mode "default"
  bindsym Return mode "default"
}


set $layout_mode "Layout [h: horizontal], [v: vertical], [f: fullscreen], [F: floating], [s: stacking], [t: tabbed], [S: sticky]"
mode $layout_mode {
  # vimと逆

  # split in horizontal orientation
  bindsym h layout splitv

  # split in vertical orientation
  bindsym v layout splith

  # toggle fullscreen
  bindsym f fullscreen toggle

  # toggle floating
  bindsym Shift+f floating toggle

  # stacking
  bindsym s layout stacking

  # tabbed
  bindsym t layout tabbed

  # toggle sticky
  bindsym Shift+s sticky toggle

  # back to normal: Enter or Escape
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+e mode $layout_mode


set $split_mode "Split [h: horizontal], [v: vertical]"
mode $split_mode {
  # vimに合わせる

  # split in vertical orientation
  bindsym h mode "default"; split v

  # split in horizontal orientation
  bindsym v mode "default"; split h

  # back to normal: Enter or Escape
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+v mode $split_mode


# resize
bindsym $mod+minus resize shrink height
bindsym $mod+equal resize grow height
bindsym $mod+Shift+less resize shrink width
bindsym $mod+Shift+greater resize grow width

#define resize and move size unit
set $size 10

# resize window (you can also use the mouse for that)
set $resize_mode "Resize [hjkl: grow], [HJKL: shrink] [1: HD] [2: FullHD] [3: WQHD] [4: 1286x760] [5: 768x432+31] [6: 768x432]"
mode $resize_mode {
  # These bindings trigger as soon as you enter the resize mode

  # grow
  bindsym h resize grow left $size px or $size ppt
  bindsym j resize grow down $size px or $size ppt
  bindsym k resize grow up $size px or $size ppt
  bindsym l resize grow right $size px or $size ppt

  # same bindings, but for the arrow keys
  bindsym Left resize grow left $size px or $size ppt
  bindsym Down resize grow down $size px or $size ppt
  bindsym Up resize grow up $size px or $size ppt
  bindsym Right resize grow right $size px or $size ppt

  # shrink
  bindsym Shift+h resize shrink left $size px or $size ppt
  bindsym Shift+j resize shrink down $size px or $size ppt
  bindsym Shift+k resize shrink up $size px or $size ppt
  bindsym Shift+l resize shrink right $size px or $size ppt

  # same bindings, but for the arrow keys
  bindsym Shift+Left resize shrink left $size px or $size ppt
  bindsym Shift+Down resize shrink down $size px or $size ppt
  bindsym Shift+Up resize shrink up $size px or $size ppt
  bindsym Shift+Right resize shrink right $size px or $size ppt

  # set fixed size
  bindsym 1 resize set 1280 px 720 px
  bindsym 2 resize set 1920 px 1080 px
  bindsym 3 resize set 2560 px 1440 px
  bindsym 4 resize set 1286 px 760 px
  bindsym 5 resize set 768 px 463 px
  bindsym 6 resize set 768 px 432 px

  # change mode
  bindsym m mode $move_mode
  bindsym $mod+m mode $move_mode

  # back to normal: Enter or Escape
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+r mode $resize_mode

# move floating window
set $move_mode "Move Floating Window [hjkl: move], [0: move to top left], [c: center], [m/mouse: move to mouse]"
mode $move_mode {
  # move
  bindsym h move left $size px
  bindsym j move down $size px
  bindsym k move up $size px
  bindsym l move right $size px

  bindsym Left move left $size px
  bindsym Down move down $size px
  bindsym Up move up $size px
  bindsym Right move right $size px

  # move to top left
  bindsym 0 move position 0 px 0 px

  # move to center
  bindsym c move position center

  # move to mouse
  bindsym m move position mouse
  bindsym --whole-window button1 move position mouse

  # change mode
  bindsym r mode $resize_mode
  bindsym $mod+r mode $resize_mode

  # back to normal: Enter or Escape
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+m mode $move_mode

# wallpaper manager
set $wallpaper_mode "Wallpaper [r: random], [l: latest], [f: fzf], [p: toggle picom]"
mode $wallpaper_mode {
  # random
  bindsym r exec --no-startup-id feh --no-fehbg --randomize --bg-max --recursive ~/Dropbox/image/illust

  # latest
  bindsym l mode "default"; exec --no-startup-id feh --no-fehbg --bg-max $(fd --hidden --no-ignore --exclude .git --type file . ~/Dropbox/image/illust --exec-batch ls -t1 | head -1)

  # fzf
  # i3-sensible-terminal -e sh -c とその後の""も必須…ないとすぐプロセスが死ぬ(原因不明)
  bindsym f mode "default"; exec --no-startup-id i3-sensible-terminal -e sh -c "fd --hidden --no-ignore --exclude .git --type file . ~/Dropbox/image/illust | fzf --multi | feh -x --auto-zoom --draw-filename --filelist - --action 'feh --no-fehbg --bg-max %F && kill -KILL %V'"

  # toggle picom
  bindsym p exec --no-startup-id killall picom || picom -b

  # back to normal: Enter or Escape
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+w mode $wallpaper_mode
